CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ)
	$(CC) -o $(NAME) $(OBJ)
.PHONY: clean
clean:
	$(RM) -f *~ $(NAME)
.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)
.PHONY: fclean
fclean: clean oclean
.PHONY: re
re: oclean all
